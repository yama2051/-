<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.employee.mapper.EmployeeLoginMapper">

	<resultMap id="EmployeeLoginResultMap" type="com.example.employee.entity.EmployeeLoginEntity">
		<id column="employee_id" property="employeeId"></id>
		<result column="password" property="password"></result>
		<result column="role" property="role"></result>
	</resultMap>
	
	<!--ログイン用-->
	<select	id="findPass" resultMap="EmployeeLoginResultMap">
		SELECT
		*
		FROM
		login_users
		WHERE
		 employee_id = #{employeeId}
	</select>


</mapper>
